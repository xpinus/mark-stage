{
  "name": "mark-stage",
  "version": "0.3.0",
  "description": "js library for add marks(highlight,underline,etc.) on web page",
  "repository": {
    "type": "git",
    "url": "https://github.com/xpinus/mark-stage.git"
  },
  "type": "module",
  "main": "dist/markstage.cjs.js",
  "module": "dist/markstage.esm.js",
  "browser": "dist/markstage.umd.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist & rollup -c",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --write",
    "lint:stage": "npx lint-staged",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "git add . &&  cz"
  },
  "keywords": [
    "mark",
    "marks-pane",
    "highlight",
    "underline",
    "annotation"
  ],
  "author": "xpinus",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.12.11",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier  --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "packageManager": "pnpm@9.3.0+sha512.ee7b93e0c2bd11409c6424f92b866f31d3ea1bef5fbe47d3c7500cdc3c9668833d2e55681ad66df5b640c61fa9dc25d546efa54d76d7f8bf54b13614ac293631"
}
